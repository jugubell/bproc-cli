; Shift out program
; This program alternate in an infinite loop GPIO_OUT
; between 01010101 (055h) and 10101010 (0AAh)
; ./examples/bpShiftOut.bpasm

.data 020h 0055h
.data 021h AE9Eh  ; 500 ms

start:
LDA 020h ; load address 010h to AC
OUT      ; put AC value in GPIO_OUT

CLE
LDA 021h

delay1:
INC
SZA
BIN 004h

LDA 020h
CIL      ; shift left AC value
OUT      ; put AC value in GPIO_OUT

CLE
LDA 021h

delay2:
INC
SZA
BIN 00ch
BIN 000h

haltProc:
HLT